	</update>
	<select id="getFirstOnlineTime" parameterType="map" resultType="string">
		  SELECT online_time
		   FROM product_lifecycle
		   WHERE prod_id = #{arg0}
		   ORDER BY
		   online_time
		   limit 1
	</select>
	<select id="getLastOnlineTime" parameterType="map" resultType="string">
		SELECT online_time
		FROM product_lifecycle
		WHERE prod_id = #{arg0}
		ORDER BY
		online_time DESC
		limit 1
	</select>
	<select id="getLastDownlineTime" parameterType="map" resultType="string">
		  SELECT offline_time
		   FROM product_lifecycle
		   WHERE prod_id = #{arg0}
		   ORDER BY
		   offline_time DESC
		   limit 1
	</select>
	<select id="queryByProductId" parameterType="map" resultMap="productLifecycleMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM product_lifecycle
		WHERE prod_id = #{productId}
	</select>
	
	
	<select id="queryByProductIdExt" parameterType="map" resultMap="productLifecycleMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM product_lifecycle
		WHERE prod_id = #{productId}
		and  status = 1
		order  by  create_time  DESC
		limit 1
	</select>
	
	

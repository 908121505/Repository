	<select id="findAll" resultMap="productLifecycleMap" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM product_lifecycle
		 WHERE id = #{id}
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="deleteEntity" parameterType="java.lang.String">
		 DELETE FROM product_lifecycle
		 WHERE id = #{id}
	</delete>

	<!-- 添加 -->
	<insert id="insert" parameterType="com.calf.module.bussiness.entity.ProductLifecycle">
		 INSERT INTO product_lifecycle
 		(id,prod_id,online_time,online_reason,offline_time,offline_reason,status,remark,create_man,modify_man,create_time,modify_time) 
		 VALUES 
 		(#{id},#{prodId},#{onlineTime},#{onlineReason},#{offlineTime},#{offlineReason},#{status},#{remark},#{createMan},#{modifyMan},#{createTime},#{modifyTime}) 
	</insert>
	<!-- 添加 -->
	<insert id="saveEntity" parameterType="com.calf.module.bussiness.entity.ProductLifecycle">
		 INSERT INTO product_lifecycle
 		(id,prod_id,online_time,online_reason,offline_time,offline_reason,status,remark,create_man,modify_man,create_time,modify_time) 
		 VALUES 
 		(#{id},#{prodId},#{onlineTime},#{onlineReason},#{offlineTime},#{offlineReason},#{status},#{remark},#{createMan},#{modifyMan},#{createTime},#{modifyTime}) 
	</insert>

	<!-- 修 改-->
	<update id="update" parameterType="com.calf.module.bussiness.entity.ProductLifecycle">
		 UPDATE product_lifecycle
 		 <set> 
			<if test="prodId != null">
				 prod_id = #{prodId},
			</if>
			<if test="onlineTime != null">
				 online_time = #{onlineTime},
			</if>
			<if test="onlineReason != null">
				 online_reason = #{onlineReason},
			</if>
			<if test="offlineTime != null">

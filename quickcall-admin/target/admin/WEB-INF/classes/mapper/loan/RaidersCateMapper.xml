<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="RaidersCate">
	<resultMap id="RaidersCateResultMap" type="RaidersCate">
		<id property="raidersCateId" column="raiders_cate_id" />
		<id property="raidersTitle" column="raiders_title" />
		<id property="imgUrl" column="img_url" />
		<id property="introduction" column="introduction" />
		<id property="sort" column="sort" />
		<id property="state" column="state" />
		<id property="createTime" column="create_time" />
		<id property="createMan" column="create_man" />
		<id property="modifyTime" column="modify_time" />
		<id property="modifyMan" column="modify_man" />
		<id property="remark" column="remark" />
		<id property="isRecommend" column="is_recommend" />

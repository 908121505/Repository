	<sql id="Base_Column_List">
		raiders_cate_id, raiders_title, img_url, introduction,
		sort, state, create_time, create_man, modify_time, modify_man, remark,
		is_recommend
	</sql>

	<select id="get" parameterType="map" resultMap="RaidersCateResultMap">
		select
		<include refid="Base_Column_List" />
		from raiders_cate where raiders_cate_id = #{arg0}
	</select>

	<select id="queryCount" parameterType="map" resultType="int">
		select count(raiders_cate_id) from raiders_cate where 1=1
		<if test="raidersTitle !=null"> and raiders_title like concat('%',#{raidersTitle},'%')
		</if>
		<if test="state !=null"> and state = #{state}</if>
	</select>
	<select id="query" parameterType="map" resultMap="RaidersCateResultMap">
		select
		<include refid="Base_Column_List" />
		from
		raiders_cate where 1=1
		<if test="raidersTitle !=null"> and raiders_title like concat('%',#{raidersTitle},'%')
		</if>
		<if test="state !=null"> and state = #{state}</if>
		limit ${iDisplayStart},${iDisplayLength}
	</select>
	
	<select id="queryList" resultMap="RaidersCateResultMap">
		select
		<include refid="Base_Column_List" />
		from raiders_cate where 1=1
	</select>

	<insert id="insert" parameterType="map">
		INSERT INTO raiders_cate
		(raiders_cate_id,raiders_title,img_url,introduction,sort,state,create_time,create_man,modify_time,modify_man,remark,is_recommend)
		VALUES
		(#{raidersCateId},#{raidersTitle},#{imgUrl},#{introduction},#{sort},#{state},#{createTime},#{createMan},#{modifyTime},#{modifyMan},#{remark},#{isRecommend})
	</insert>

	<delete id="delete" parameterType="map">
		DELETE FROM raiders_cate
		WHERE
		raiders_cate_id = #{arg0}
	</delete>

	<select id="getRaidersCateById" parameterType="map"
		resultMap="RaidersCateResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM raiders_cate
		WHERE raiders_cate_id = #{arg0}
	</select>

	<update id="update" parameterType="map">
		UPDATE raiders_cate
		<set>

			<if test="raidersTitle != null"> raiders_title = #{raidersTitle}, </if>

			<if test="imgUrl != null"> img_url = #{imgUrl}, </if>

			<if test="introduction != null"> introduction = #{introduction}, </if>

			<if test="sort != null"> sort = #{sort}, </if>

			<if test="state != null"> state = #{state}, </if>

			<if test="createTime != null"> create_time = #{createTime}, </if>

			<if test="createMan != null"> create_man = #{createMan}, </if>

			<if test="modifyTime != null"> modify_time = #{modifyTime}, </if>

			<if test="modifyMan != null"> modify_man = #{modifyMan}, </if>

			<if test="remark != null"> remark = #{remark}, </if>

			<if test="isRecommend != null"> is_recommend = #{isRecommend}, </if>

		</set>
		WHERE raiders_cate_id = #{raidersCateId}
	</update>




</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BottomIcon">

	<resultMap type="BottomIcon" id="bottomIconMap">
		<id property="id" column="id" javaType="java.lang.Integer"></id>
		<result property="preIconName" column="pre_icon_name" javaType="java.lang.Integer"></result>
		<result property="iconName" column="icon_name" javaType="java.lang.String"></result>
		<result property="iconPosition" column="icon_position" javaType="java.lang.Integer"></result>
		<result property="state" column="state" javaType="java.lang.Integer"></result>
		<result property="preIconImg" column="pre_icon_img" javaType="java.lang.String"></result>
		<result property="aftIconImg" column="aft_icon_img" javaType="java.lang.String"></result>
		<result property="linkUrl" column="link_url" javaType="java.lang.String"></result>
		<result property="createTime" column="create_time" javaType="java.lang.String"></result>
		<result property="createMan" column="create_man" javaType="java.lang.String"></result>
		<result property="modifyTime" column="modify_time" javaType="java.lang.String"></result>
		<result property="modifyMan" column="modify_man" javaType="java.lang.String"></result>
		<result property="remark" column="remark" javaType="java.lang.String"></result>
	</resultMap>

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
id,	pre_icon_name,	icon_name,	icon_position,	pre_icon_img,	aft_icon_img,	link_url,state,	create_time,	create_man,	modify_time,	modify_man,	remark
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="getEntityById" resultMap="bottomIconMap" parameterType="java.lang.Integer">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM bottom_icon
		 WHERE id = #{id}
	</select>

	<!-- 查询（根据主键ID查询） -->
	<select id="findAll" resultMap="bottomIconMap" parameterType="java.lang.Integer">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM bottom_icon
		 WHERE id = #{id}
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="deleteEntity" parameterType="java.lang.Integer">
		 DELETE FROM bottom_icon
		 WHERE id = #{id}
	</delete>

	<!-- 添加 -->
	<insert id="saveEntity" parameterType="BottomIcon">
		 INSERT INTO bottom_icon
 		(pre_icon_name,icon_name,icon_position,pre_icon_img,aft_icon_img,link_url,create_time,create_man,modify_time,modify_man,remark)
		 VALUES 
 		(#{preIconName},#{iconName},#{iconPosition},#{preIconImg},#{aftIconImg},#{linkUrl},#{createTime},#{createMan},#{modifyTime},#{modifyMan},#{remark})
	</insert>

	<!-- 修 改-->
	<update id="update" parameterType="BottomIcon">
		 UPDATE bottom_icon
 		 <set> 
			<if test="preIconName != null">
				 pre_icon_name = #{preIconName},
			</if>
			<if test="iconName != null">
				 icon_name = #{iconName},
			</if>
			<if test="iconPosition != null">
				 icon_position = #{iconPosition},
			</if>
			<if test="preIconImg != null">
				 pre_icon_img = #{preIconImg},
			</if>
			<if test="aftIconImg != null">
				 aft_icon_img = #{aftIconImg},
			</if>
			<if test="linkUrl != null">
				 link_url = #{linkUrl},
			</if>
			 <if test="state != null">
				 state = #{state},
			 </if>
			<if test="createTime != null">
				 create_time = #{createTime},
			</if>
			<if test="createMan != null">
				 create_man = #{createMan},
			</if>
			<if test="modifyTime != null">
				 modify_time = #{modifyTime},
			</if>
			<if test="modifyMan != null">
				 modify_man = #{modifyMan},
			</if>
			<if test="remark != null">
				 remark = #{remark},
			</if>

 		 </set>
		 WHERE id = #{id}
	</update>
	<!-- 查询所有 -->
	<select id="query" resultMap="bottomIconMap" parameterType="map">
		SELECT
		<include refid="Base_Column_List"/>
		FROM bottom_icon
		ORDER BY icon_position
	</select>
	<!-- 统计所有 -->
	<select id="queryCount" resultType="java.lang.Integer" parameterType="map">
		SELECT
		count(1)
		FROM bottom_icon
	</select>

	<!-- 根据id查询单个icon配置 -->
	<select id="get" resultMap="bottomIconMap" parameterType="java.util.Map">
		SELECT
		<include refid="Base_Column_List"/>
		FROM bottom_icon
		WHERE id = #{arg0}
		limit 1
	</select>
</mapper>
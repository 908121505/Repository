<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="LoanCate">
	<resultMap id="LoanCateResultMap" type="LoanCate">
		<id property="loanCateId" column="loan_cate_id" />
		<id property="state" column="state" />
		<id property="loanTitle" column="loan_title" />
		<id property="imageUrl" column="image_url" />
		<id property="introduction" column="introduction" />
		<id property="sort" column="sort" />
		<id property="createTime" column="create_time" />
		<id property="createMan" column="create_man" />
		<id property="modifyTime" column="modify_time" />
		<id property="modifyMan" column="modify_man" />
		<id property="remark" column="remark" />
	</resultMap>

	<sql id="Base_Column_List">
		loan_cate_id, state, loan_title, image_url, introduction,
		sort,
		create_time,
		create_man, modify_time, modify_man, remark
	</sql>

	<select id="get" parameterType="map" resultMap="LoanCateResultMap">
		select
		<include refid="Base_Column_List" />
		from loan_cate where loan_cate_id = #{arg0}
	</select>

	<select id="queryCount" parameterType="map" resultType="int">
		select count(loan_cate_id) from loan_cate where 1=1
		<if test="loanTitle !=null"> and loan_title like concat('%',#{loanTitle},'%')</if>
		<if test="state !=null"> and state = #{state}</if>
	</select>
	<select id="query" parameterType="map" resultMap="LoanCateResultMap">
		select
		<include refid="Base_Column_List" />
		from loan_cate where 1=1
		<if test="loanTitle !=null"> and loan_title like concat('%',#{loanTitle},'%')</if>
		<if test="state !=null"> and state = #{state}</if>
		limit ${iDisplayStart},${iDisplayLength}
	</select>
	
	<select id="queryList" resultMap="LoanCateResultMap">
		select
		<include refid="Base_Column_List" />
		from loan_cate where 1=1
	</select>

	<insert id="insert" parameterType="map">
		INSERT INTO loan_cate
		(loan_cate_id,state,loan_title,image_url,introduction,sort,create_time,create_man,modify_time,modify_man,remark)
		VALUES
		(#{loanCateId},#{state},#{loanTitle},#{imageUrl},#{introduction},#{sort},#{createTime},#{createMan},#{modifyTime},#{modifyMan},#{remark})
	</insert>

	<delete id="delete" parameterType="map">
		DELETE FROM loan_cate WHERE
		loan_cate_id = #{arg0}
	</delete>

	<select id="getLoanCateById" parameterType="map" resultMap="LoanCateResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM loan_cate WHERE loan_cate_id = #{arg0}
	</select>

	<update id="update" parameterType="map">
		UPDATE loan_cate
		<set>

			<if test="state != null"> state = #{state}, </if>

			<if test="loanTitle != null"> loan_title = #{loanTitle}, </if>

			<if test="imageUrl != null"> image_url = #{imageUrl}, </if>

			<if test="introduction != null"> introduction = #{introduction}, </if>

			<if test="sort != null"> sort = #{sort}, </if>

			<if test="createTime != null"> create_time = #{createTime}, </if>

			<if test="createMan != null"> create_man = #{createMan}, </if>

			<if test="modifyTime != null"> modify_time = #{modifyTime}, </if>

			<if test="modifyMan != null"> modify_man = #{modifyMan}, </if>

			<if test="remark != null"> remark = #{remark}, </if>

		</set>
		WHERE loan_cate_id = #{loanCateId}
	</update>




</mapper>

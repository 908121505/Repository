		<result property="state" column="state" javaType="java.lang.Integer"></result>
		<result property="isRecommand" column="is_recommand" javaType="java.lang.Integer"></result>
		<result property="createTime" column="create_time" javaType="java.lang.String"></result>
		<result property="createMan" column="create_man" javaType="java.lang.String"></result>
		<result property="modifyTime" column="modify_time" javaType="java.lang.String"></result>
		<result property="modifyMan" column="modify_man" javaType="java.lang.String"></result>
		<result property="remark" column="remark" javaType="java.lang.String"></result>
	</resultMap>

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
bill_product_id,	product_name,	product_img,	state,	is_recommand,	create_time,	create_man,	modify_time,	modify_man,	remark
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="get" resultMap="userBillProductMap" parameterType="map">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM user_bill_product
		 WHERE bill_product_id = #{arg0}
	</select>

	<!-- 查询（根据主键ID查询） -->
	<select id="findAll" resultMap="userBillProductMap" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM user_bill_product
		 WHERE bill_product_id = #{billProductId}
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="delete" parameterType="map">
		 DELETE FROM user_bill_product
		 WHERE bill_product_id = #{arg0}
	</delete>

	<!-- 添加 -->
	<insert id="insert" parameterType="com.calf.module.userbill.entity.UserBillProduct">
		 INSERT INTO user_bill_product
 		(bill_product_id,product_name,product_img,state,is_recommand,create_time,create_man,modify_time,modify_man,remark) 
		 VALUES 
 		(#{billProductId},#{productName},#{productImg},#{state},#{isRecommand},#{createTime},#{createMan},#{modifyTime},#{modifyMan},#{remark}) 
	</insert>

	<!-- 修 改-->
	<update id="update" parameterType="com.calf.module.userbill.entity.UserBillProduct">
		 UPDATE user_bill_product
 		 <set> 
			<if test="productName != null">
				 product_name = #{productName},
			</if>
			<if test="productImg != null">
				 product_img = #{productImg},
			</if>
			<if test="state != null">
				 state = #{state},
			</if>
			<if test="isRecommand != null">
				 is_recommand = #{isRecommand},
			</if>
			<if test="createTime != null">
				 create_time = #{createTime},
			</if>
			<if test="createMan != null">
				 create_man = #{createMan},
			</if>
			<if test="modifyTime != null">
				 modify_time = #{modifyTime},
			</if>
			<if test="modifyMan != null">
				 modify_man = #{modifyMan},
			</if>
			<if test="remark != null">
				 remark = #{remark},
			</if>

 		 </set>
		 WHERE bill_product_id = #{billProductId}
	</update>
	<!-- 查询（根据主键条件查询） -->
	<select id="query" resultMap="userBillProductMap" parameterType="map">
		SELECT
		<include refid="Base_Column_List" />
		FROM user_bill_product
		WHERE 1 = 1
		<if test="productName != null">
			AND product_name = #{productName}
		</if>
		<if test="productImg != null">
			AND product_img = #{productImg}
		</if>
		<if test="state != null">
			AND state = #{state}
		</if>
		<if test="isRecommand != null">
			AND is_recommand = #{isRecommand}
		</if>
		<if test="createTime != null">
			AND create_time = #{createTime}
		</if>
		<if test="createMan != null">
			AND create_man = #{createMan}
		</if>
		<if test="modifyTime != null">
			AND modify_time = #{modifyTime}
		</if>
		<if test="modifyMan != null">
			AND modify_man = #{modifyMan}
		</if>
		<if test="remark != null">
			AND remark = #{remark}
		</if>
		ORDER BY create_time DESC
		<if test="iDisplayStart!=null and iDisplayLength!=''">
			limit ${iDisplayStart},${iDisplayLength}
		</if>
	</select>
	<!-- 统计（根据主键条件统计） -->
	<select id="queryUserBillProductCount" resultType="int" parameterType="map">
		SELECT

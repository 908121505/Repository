<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Banner">
    <resultMap id="BannerResultMap" type="Banner">
        <id property="bannerId" column="banner_id"/>
        <id property="title" column="title"/>
        <id property="image" column="image"/>
        <id property="url" column="url"/>
        <id property="serialNum" column="sort"/>
        <id property="startTime" column="start_time"/>
        <id property="endTime" column="end_time"/>
        <id property="createTime" column="create_time"/>
        <id property="createMan" column="create_man"/>
        <id property="modifyTime" column="modify_time"/>
        <id property="modifyMan" column="modify_man"/>
        <id property="state" column="state"/>
        <id property="bannerType" column="banner_type"/>
        <id property="appVersion" column="app_version"/>
        <id property="appVersionRule" column="app_version_rule"/>
        <id property="deviceType" column="device_type"/>
    </resultMap>

    <sql id="Base_Column_List">
		banner_id, title, image, url, sort, state, end_time, start_time,
		create_time, create_man, modify_time, modify_man, remark,banner_type,app_version,app_version_rule,device_type
	</sql>
    <select id="get" parameterType="map" resultMap="BannerResultMap">
        select
        <include refid="Base_Column_List"/>
        from banner
        where banner_id = #{bannerId}
    </select>

    <select id="queryCount" parameterType="map" resultType="int">
        select count(banner_id) from banner where 1=1
        <if test="title !=null">and title like concat('%',#{title},'%')</if>
        <if test="state !=null">and state = #{state}</if>
        <if test="bannerType !=null and bannerType!=''">and banner_type = #{bannerType}</if>
        <if test="startTime !=null and startTime!=''">and start_time <![CDATA[  >= ]]> #{startTime}</if>
        <if test="endTime !=null and endTime!=''">and end_time <![CDATA[  <= ]]> #{endTime}</if>
    </select>
    <select id="query" parameterType="map" resultMap="BannerResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        banner where 1=1
        <if test="title !=null and title !=''">and title like concat('%',#{title},'%')</if>
        <if test="state !=null and state!=''">and state = #{state}</if>
        <if test="bannerType !=null and bannerType!=''">and banner_type = #{bannerType}</if>
        <if test="startTime !=null and startTime!=''">and start_time <![CDATA[  >= ]]> #{startTime}</if>
        <if test="endTime !=null and endTime!=''">and end_time <![CDATA[  <= ]]> #{endTime}</if>
        <if test="bannerId !=null and bannerId!=''">and banner_id = #{bannerId}</if>
        order by create_time desc
        limit ${iDisplayStart},${iDisplayLength}
    </select>

    <insert id="insert" parameterType="map">
		INSERT INTO banner
		(banner_id,title,image,url,sort,state,end_time,start_time,create_time,create_man,modify_time,modify_man,remark,banner_type,banner_color,zone_id,app_version,app_version_rule,device_type)
		VALUES
		(#{bannerId},#{title},#{image},#{url},#{serialNum},#{state},#{endTime},#{startTime},#{createTime},#{createMan},#{modifyTime},#{modifyMan},#{remark},#{bannerType},#{bannerColor},#{zoneId},#{appVersion},#{appVersionRule},#{deviceType})
	</insert>

    <delete id="delete" parameterType="map">
		DELETE FROM banner
		WHERE banner_id = #{arg0}
	</delete>

    <select id="getBannerById" parameterType="map" resultMap="BannerResultMap">
        SELECT
        <include refid="Base_Column_List"/>,banner_color bannerColor,zone_id zoneId
        FROM banner
        WHERE banner_id = #{arg0}
    </select>

    <update id="update" parameterType="map">
        UPDATE banner
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="image != null">
                image = #{image},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="serialNum != null">
                sort = #{serialNum},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
            <if test="startTime != null">
                start_time = #{startTime},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="createMan != null">
                create_man = #{createMan},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime},
            </if>
            <if test="modifyMan != null">
                modify_man = #{modifyMan},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="bannerType != null">
                banner_type = #{bannerType},
            </if>
            <if test="bannerColor != null">
                banner_color = #{bannerColor},
            </if>
            <if test="zoneId != null">
                zone_id = #{zoneId},
            </if>
            <if test="appVersion != null">
                app_version = #{appVersion},
            </if>
            <if test="appVersionRule != null">
                app_version_rule = #{appVersionRule},
            </if>
            <if test="deviceType != null">
                device_type = #{deviceType},
            </if>
        </set>
        WHERE banner_id = #{bannerId}
    </update>

    <select id="queryBanUrl" parameterType="map" resultMap="BannerResultMap">
		 SELECT url FROM banner WHERE banner_id  = #{bannerId}
	</select>


</mapper>

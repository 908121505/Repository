<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Platform">
    <resultMap id="articleMap" type="Platform">
        <id column="platforms_extend_id" property="platformsExtendId" jdbcType="VARCHAR" />
        <result column="product_id" property="productId" jdbcType="VARCHAR" />
        <result column="platform_name" property="platformName" jdbcType="VARCHAR" />
        <result column="channel_id" property="channelId" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <result column="state" property="state" jdbcType="INTEGER" />
        <result column="cooperation" property="cooperation" jdbcType="VARCHAR" />
        <result column="remark" property="remark" jdbcType="VARCHAR" />
        <result column="xl_num" property="xlNum" jdbcType="INTEGER" />
        <result column="platform_key" property="platformKey" jdbcType="VARCHAR" />
        <result column="platform_type" property="platformType" jdbcType="INTEGER" />
    </resultMap>

    <sql id="columns">
        platforms_extend_id,platform_name, product_id,channel_id, create_time, update_time, state, cooperation,
        remark,xl_num,platform_key,platform_type
    </sql>

    <select id="queryCount" parameterType="map" resultType="int">
        select count(platforms_extend_id) from platforms_extend where 1=1
        <if test="null != state">and state =  #{state}</if>
        <if test="null != platformName">and platform_name like concat('%', #{platformName},'%')</if>
    </select>
    <select id="query" parameterType="map" resultMap="articleMap">
        select
        <include refid="columns"/>
        from platforms_extend where 1=1
        <if test="null != state">and state =  #{state}</if>
        <if test="null != platformName">and platform_name like concat('%', #{platformName},'%')</if>
        order by create_time desc
        limit ${iDisplayStart},${iDisplayLength}
    </select>

    <insert id="insert" parameterType="map">
        insert into
        platforms_extend(platforms_extend_id,platform_name,product_id,channel_id,create_time,update_time,state,cooperation,remark,xl_num,platform_key,platform_type)
        values(#{platformsExtendId},#{platformName},#{productId},#{channelId},#{createTime},#{updateTime},#{state},#{cooperation},#{remark},#{xlNum},#{platformKey},#{platformType})
    </insert>

    <select id="get" parameterType="map" resultMap="articleMap">
        select
        <include refid="columns"/>
        from platforms_extend where platforms_extend_id = #{arg0}
    </select>

    <delete id="delete" parameterType="map">
        UPDATE platforms_extend SET state = 2 where platforms_extend_id = #{arg0}
    </delete>

    <update id="update" parameterType="map">
        UPDATE platforms_extend
        <set>
            <if test="platformName != null">
                platform_name = #{platformName},
            </if>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="channelId != null">
                channel_id = #{channelId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="cooperation != null">
                cooperation = #{cooperation},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="xlNum != null">
                xl_num = #{xlNum},
            </if>
            <if test="platformKey != null">
                platform_key = #{platformKey},
            </if>
            <if test="platformType != null">
                platform_type = #{platformType}
            </if>
        </set>
        WHERE platforms_extend_id = #{platformsExtendId}
    </update>

</mapper>

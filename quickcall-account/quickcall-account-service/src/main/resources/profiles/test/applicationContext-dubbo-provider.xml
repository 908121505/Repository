<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="quickcall-account-server" owner="len.song" organization="xiaoniu"/>
    <!-- registry address, used for service to register itself-->
    <dubbo:protocol name="dubbo" port="31350" serialization="kryo"/>

    <!-- 注册服务端 -->
    <!--支付相关 -->
    <dubbo:service group="accountCenter" interface="com.honglu.quickcall.account.facade.business.PaymentDubboBusiness" ref="Account.PaymentDubboBusiness" timeout="30000" retries="0" version="0.0.1"/>
    <!--账户相关 -->
    <dubbo:service group="accountCenter" interface="com.honglu.quickcall.account.facade.business.AccountDubboBusiness" ref="Account.AccountDubboBusiness" timeout="10000" retries="0" version="0.0.1"/>

</beans>
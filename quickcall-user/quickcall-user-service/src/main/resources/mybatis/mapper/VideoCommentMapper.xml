<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="VideoComment" >
  
  <insert id="insert" parameterType="VideoComment" >
    insert into video_comment
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="vid != null and vid != 0" >
        vid,
      </if>
      <if test="pid != null and pid != 0" >
        pid,
      </if>
      <if test="comment != null and comment != ''" >
        comment
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="vid != null and vid != 0" >
        #{vid,jdbcType=INTEGER},
      </if>
      <if test="pid != null and pid != 0" >
        #{pid,jdbcType=INTEGER},
      </if>
      <if test="comment != null and comment != ''" >
        #{comment,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  
  <!-- 根据视频编号查询评论 -->
  <select id="selectByVid" resultType="VideoComment" parameterType="Map">
  	select VC.*,P.nick_name PNICK 
  	from video_comment VC 
  	LEFT JOIN persion P ON VC.pid=P.id 
  	where vid=#{vid} 
  	ORDER BY create_time DESC
  	LIMIT #{begin},#{last}
  </select>
  
</mapper>